<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Stream</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>ðŸŽ¥ Live Stream</h1>
            <nav>
                <a href="/admin" class="admin-link">Admin Settings</a>
            </nav>
        </header>

        <main>
            <div class="stream-container">
                <div id="stream-status" class="status-offline">
                    <span class="status-indicator"></span>
                    <span class="status-text">Offline</span>
                </div>
                
                <video id="videoPlayer" controls autoplay muted>
                    <source src="http://localhost:8000/live/stream/index.m3u8" type="application/x-mpegURL">
                    Your browser does not support the video tag.
                </video>

                <div class="stream-info">
                    <h2>Stream Information</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <span class="info-label">Stream Key:</span>
                            <span class="info-value" id="streamKey">livestream</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">RTMP URL:</span>
                            <span class="info-value" id="rtmpUrl">rtmp://localhost:1935/live</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Server:</span>
                            <span class="info-value">Running</span>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer>
            <p>&copy; 2025 Web RTMP Stream</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
    <script>
        const video = document.getElementById('videoPlayer');
        const statusEl = document.getElementById('stream-status');
        const statusText = statusEl.querySelector('.status-text');

        // Initialize HLS player
        if (Hls.isSupported()) {
            const hls = new Hls();
            hls.loadSource('http://localhost:8000/live/stream/index.m3u8');
            hls.attachMedia(video);
            hls.on(Hls.Events.MANIFEST_PARSED, function() {
                video.play();
                updateStatus('online');
            });
            hls.on(Hls.Events.ERROR, function() {
                updateStatus('offline');
            });
        } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
            // For Safari
            video.src = 'http://localhost:8000/live/stream/index.m3u8';
            video.addEventListener('loadedmetadata', function() {
                updateStatus('online');
            });
        }

        // Check stream status periodically
        function checkStreamStatus() {
            fetch('http://localhost:8000/api/streams')
                .then(res => res.json())
                .then(data => {
                    if (data.live && data.live.stream) {
                        updateStatus('online');
                    } else {
                        updateStatus('offline');
                    }
                })
                .catch(() => {
                    updateStatus('offline');
                });
        }

        function updateStatus(status) {
            statusEl.className = `status-${status}`;
            statusText.textContent = status === 'online' ? 'Live' : 'Offline';
        }

        // Check status every 5 seconds
        setInterval(checkStreamStatus, 5000);
        checkStreamStatus();
    </script>
</body>
</html>

